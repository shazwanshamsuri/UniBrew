<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    android:background="@color/cream_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/coffee_dark"
        android:fontFamily="sans-serif-rounded"
        android:layout_marginBottom="32dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/ivEditProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cute_camera"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap photo to change"
        android:textColor="@color/coffee_primary"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@color/coffee_dark"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etEditUsername"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_rounded_input"
        android:hint="New Username"
        android:paddingStart="20dp"
        android:textColor="@color/coffee_dark"
        android:layout_marginBottom="32dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveChanges"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Save Changes"
        android:background="@drawable/bg_rounded_button"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Log Out"
        android:textColor="@color/white"
        android:backgroundTint="@color/orange_pop"
        android:background="@drawable/bg_rounded_button"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"/>

</LinearLayout>