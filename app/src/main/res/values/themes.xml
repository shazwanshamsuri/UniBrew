<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.UniBrew" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/coffee_primary</item>
        <item name="colorPrimaryVariant">@color/status_bar</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/orange_pop</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/status_bar</item>

        <item name="popupMenuStyle">@style/CozyPopupMenu</item>
        <item name="android:popupMenuStyle">@style/CozyPopupMenu</item>
    </style>

    <style name="CozyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_rounded_menu</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:textColor">@color/coffee_dark</item>
    </style>
</resources>